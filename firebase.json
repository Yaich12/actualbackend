{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "python_functions",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "venv",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "runtime": "python312"
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5501
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": 8081
    },
    "storage": {
      "port": 9199
    },
    "hosting": {
      "host": "127.0.0.1",
      "port": 5002
    },
    "pubsub": {
      "host": "127.0.0.1",
      "port": 8186
    },
    "ui": {
      "enabled": true,
      "host": "127.0.0.1",
      "port": 4002
    }
  },
  "firestore": {
    "database": "actuelbackend12",
    "location": "eur3",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
