rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Main data model in this app:
     * users/{userId}/...
     *
     * Examples used in code:
     * - users/{userId}                      (profile)
     * - users/{userId}/clients/{clientId}
     * - users/{userId}/clients/{clientId}/journalEntries/{entryId}
     * - users/{userId}/appointments/{appointmentId}
     * - users/{userId}/services/{serviceId}
     * - users/{userId}/forloeb/{forloebId}
     */
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // All nested subcollections under the user are also owner-only.
      match /{document=**} {
        allow read, write: if isOwner(userId);
      }
    }

    match /publicClinics/{clinicSlug} {
      allow read: if resource.data.isActive == true;
      allow create: if isSignedIn()
        && request.resource.data.ownerUid == request.auth.uid;
      allow update: if isSignedIn()
        && resource.data.ownerUid == request.auth.uid
        && request.resource.data.ownerUid == resource.data.ownerUid;
      allow delete: if isSignedIn() && resource.data.ownerUid == request.auth.uid;
    }

    // Default deny for anything outside /users/{userId}/...
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
